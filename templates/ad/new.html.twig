{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block title %}New Ad{% endblock %}

{% block body %}
    <h1 class="text-center">Créer une annonce</h1>

    {{ include('ad/_form.html.twig') }}

    <a href="{{ path('ad_index') }}">Retour à la liste</a>
{% endblock %}

{% block _ad_images_widget %}
    <p>Içi, vous pouvez ajouter vos images </p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>  
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}
